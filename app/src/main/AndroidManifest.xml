<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.jeantuffier.tweetics">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".presentation.common.Tweetics"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="fr.jeantuffier.tweetics.presentation.politician.PoliticianActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.jeantuffier.tweetics.presentation.tweets.TweetsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.jeantuffier.tweetics.presentation.politician.PoliticianActivity" />
        </activity>
    </application>

</manifest>